<div id="dashboard-logo">Take a Breather</div>

<div id="main-container">

  <div id="circle-container">
    <div id="circle4">
      <div class="circle-star" style="color: #c8995a">&#10036;</div>
      <div class="circle-text link">Edit</div>
      <div class="circle-info">User Profile</div>
    </div>
  </div>

  <div id="display-container-blue">
    <div id="edit-form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
      <div class="field field-container" id="form-top">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field field-container">
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field field-container">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field field-container">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field field-container">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="field field-container">
        Contact #1 (name):
        <%= f.text_field :contact1_name %><br>
        Contact #1 (number):
        <%= f.text_field :contact1_number %>
      </div>

      <div class="field field-container">
        Contact #2 (name):
        <%= f.text_field :contact2_name %><br>
        Contact #2 (number):
        <%= f.text_field :contact2_number %>
      </div>

      <div class="actions button-container">
        <%= f.submit "Update", url: edit_user_path(id: current_user.id), class: 'update-btn' %>
        <%= link_to "Cancel Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'cancel-btn' %>

        <%= link_to "Back", :back, class: 'back-btn' %>
      </div>

    <% end %>
    </div>
  </div>
  
</div>






